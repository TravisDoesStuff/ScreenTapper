<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tnburt.screentapper.MainActivity">

    <LinearLayout
        android:id="@+id/vignette"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/vignette"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="-100dp">
    </LinearLayout>

    <TextView
        android:id="@+id/text_header"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="82dp"
        android:gravity="bottom"
        android:fontFamily="sans-serif-smallcaps"
        android:text="You Have Tapped The Screen"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_count"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/text_count"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:gravity="bottom"
        android:text="0"
        android:textAlignment="center"
        android:textSize="84sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_footer"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="130dp"
        android:layout_marginTop="12dp"
        android:gravity="top"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Times!"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_count"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
